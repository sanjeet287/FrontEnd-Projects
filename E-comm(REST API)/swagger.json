{
    "openapi":"3.0.0",
    "info":{
        "version":"1.0.0",
        "description":"API for E-Commerce",
        "title":"E-Commerce API"
    },
    "servers":[{
        "url": "http://localhost:3000"
    }],
    "components":{
        "securitySchemes":{
            "JWT":{
                "in":"header",
                "name":"Authorization",
                "type":"apiKey"
            }
        }
    },
    
    "paths":{
        "/api/users/signin":{
            "post":{
                "tags":["Users"],
                "summary":"User Login",
                "description":"User login to get token",
                "requestBody":{
                    "content":{
                        "application/json":{

                            "schema":{
                                "type": "object",
                                "properties":{
                                    "email":{
                                        "type":"string"
                                    },
                                    "password":{
                                        "type":"string"
                                    }
                                }
                            }
                        }
                    }  
                    
                },
                "responses":{
                    "200":{
                        "description":"OK"
                    },
                    "400" : {
                        "description": "Invalid Credentials !"
                    }

                }
            }
        },
        "/api/products":{
            "get":{
                "tags":["Products"],
                "summary":"Show All Products",
                "description":"User will get allProducts",
                "security":[{"JWT":{}}],               
                "responses":{
                    "200":{
                        "description":"OK"
                    },
                    "401" : {
                        "description": "UnAuthorized  !"
                    }

                }
            }
        }
    }
}